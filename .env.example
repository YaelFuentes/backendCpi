# Configuración de autenticación Basic Auth
# Copia este archivo a .env y cambia las credenciales
AUTH_ADMIN_USER=your_admin_username
AUTH_ADMIN_PASS=your_strong_admin_password

AUTH_USER_USER=your_user_username
AUTH_USER_PASS=your_user_password

AUTH_CLIENT_USER=your_client_username
AUTH_CLIENT_PASS=your_client_password

# Configuración del servidor
PORT=3000
NODE_ENV=development

# Configuración de autenticación
AUTH_REALM=Backend CPI API
AUTH_CHALLENGE=true

# Configuración de logging
LOG_LEVEL=info

# Configuración de IA para procesamiento de logs
AI_PROVIDER=groq
# Opciones: ollama, groq, huggingface

# Groq API (gratuita) - Obtén tu API key en https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# Hugging Face API (gratuita) - Obtén tu token en https://huggingface.co/settings/tokens
HUGGINGFACE_API_TOKEN=your_huggingface_token_here

# Ollama (local, completamente gratuito)
OLLAMA_BASE_URL=http://localhost:11434

# Configuración de IA
AI_MODEL=llama3-8b-8192
AI_MAX_TOKENS=500
AI_TEMPERATURE=0.3