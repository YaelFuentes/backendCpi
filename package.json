{
  "name": "backend-cpi",
  "version": "1.0.0",
  "description": "API backend con Express y sistema de logging",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dashboard": "powershell -ExecutionPolicy Bypass -File .\\open-dashboard.ps1",
    "dashboard:dev": "powershell -ExecutionPolicy Bypass -File .\\open-dashboard.ps1 -DevMode",
    "verify": "powershell -ExecutionPolicy Bypass -File .\\verify-system.ps1",
    "setup": "powershell -ExecutionPolicy Bypass -File .\\env-utils.ps1 -Action setup",
    "env:validate": "powershell -ExecutionPolicy Bypass -File .\\env-utils.ps1 -Action validate",
    "env:show": "powershell -ExecutionPolicy Bypass -File .\\env-utils.ps1 -Action show",
    "test:api": "powershell -ExecutionPolicy Bypass -File .\\test-apis.ps1",
    "test:pi4": "powershell -ExecutionPolicy Bypass -File .\\test-pi4-api.ps1",
    "test:evaluar": "powershell -ExecutionPolicy Bypass -File .\\test-evaluar-pruebas.ps1",
    "test:logtail": "powershell -ExecutionPolicy Bypass -File .\\test-logtail.ps1",
    "test:ai": "powershell -ExecutionPolicy Bypass -File .\\test-ai-functionality.ps1",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "express",
    "nodejs",
    "api",
    "backend"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@logtail/node": "^0.4.21",
    "@logtail/winston": "^0.4.23",
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "express-basic-auth": "^1.2.1",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
