{
  "monitoring": {
    "baseUrl": "https://e0980-tmn.hci.us2.hana.ondemand.com/itspaces/shell/integration",
    "schedule": {
      "cron": "0 9 * * 1,3,5",
      "description": "Lunes, Mi√©rcoles y Viernes a las 9:00 AM",
      "timezone": "America/Mexico_City"
    },
    "timeout": {
      "page": 30000,
      "navigation": 15000,
      "element": 5000
    },
    "screenshot": {
      "fullPage": true,
      "type": "png",
      "quality": 90
    },
    "browser": {
      "headless": true,
      "args": [
        "--no-sandbox",
        "--disable-setuid-sandbox",
        "--disable-dev-shm-usage",
        "--disable-web-security",
        "--disable-features=VizDisplayCompositor"
      ]
    },
    "selectors": {
      "login": {
        "username": [
          "input[name='username']",
          "input[name='user']",
          "input[id='username']",
          "input[id='user']",
          "input[type='text']"
        ],
        "password": [
          "input[name='password']",
          "input[id='password']",
          "input[type='password']"
        ],
        "submit": [
          "button[type='submit']",
          "input[type='submit']",
          "button:contains('Log in')",
          "button:contains('Sign in')",
          "button:contains('Iniciar')"
        ]
      },
      "integrations": [
        ".integration-item",
        ".flow-item",
        ".integration-flow",
        "[data-testid*='integration']",
        ".sap-m-List .sap-m-ListItem",
        ".sapMListItems .sapMSLI",
        ".integration-tile",
        ".flow-tile"
      ],
      "status": {
        "error": [
          ".error",
          ".failed",
          ".red",
          "[style*='red']",
          ".sap-m-MessageStrip--Error",
          ".sapMMessageStripError"
        ],
        "warning": [
          ".warning",
          ".yellow",
          "[style*='yellow']",
          ".sap-m-MessageStrip--Warning",
          ".sapMMessageStripWarning"
        ],
        "success": [
          ".success",
          ".green",
          "[style*='green']",
          ".sap-m-MessageStrip--Success",
          ".sapMMessageStripSuccess"
        ]
      }
    }
  },
  "integrations": [
    {
      "name": "Integration Flow 1",
      "id": "flow1",
      "expectedStatus": "success",
      "critical": true
    },
    {
      "name": "Integration Flow 2", 
      "id": "flow2",
      "expectedStatus": "success",
      "critical": false
    }
  ],
  "notifications": {
    "enabled": true,
    "onError": true,
    "onWarning": false,
    "onSuccess": false,
    "methods": ["log", "email"]
  },
  "reports": {
    "retention": {
      "days": 30,
      "maxFiles": 100
    },
    "format": "json",
    "includeScreenshots": true
  }
}